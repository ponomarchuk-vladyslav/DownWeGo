<Window x:Class="PIIIProject.Views.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject.Views"
        mc:Ignorable="d"
        Title="Info" Height="450" Width="800" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="INFO" FontSize="50" Foreground="White" HorizontalAlignment="Center" Grid.Row="0"/>
        <Label Content="W, A, S, D To move" Foreground="White" HorizontalAlignment="Center" Grid.Row="1" FontSize="50"/>
        <Label Content="Button opens inventory" Foreground="White" HorizontalAlignment="Center" Grid.Row="2" FontSize="50"/>

    </Grid>
</Window>
