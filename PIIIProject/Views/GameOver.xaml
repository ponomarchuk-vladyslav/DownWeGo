<Window x:Class="PIIIProject.Views.GameOver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject.Views"
        mc:Ignorable="d"
        Title="GameOver" Height="500" Width="850" Background="Black">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="100"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="ExtraBlack"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock x:Name="WinText" Text="You Win, Bro!!" Visibility="Visible"/>
        <TextBlock x:Name="LoseText" Text="You Lose, Bro!!" Visibility="Hidden"/>
        <Button Click="BtnEnd_Clicked"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="50" Width="500" Height="100" FontSize="50" Content="End Game!! :D" Background="DimGray" FontWeight="ExtraBlack" BorderBrush="DarkSlateBlue" BorderThickness="5" Foreground="Black"/>
    </Grid>
</Window>
